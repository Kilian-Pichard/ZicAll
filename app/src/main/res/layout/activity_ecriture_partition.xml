            android:onClick="demarrerArreterEcriture"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDo1"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="Do 1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnRe1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Re 1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnMi1"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="Mi 1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnFa1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Fa 1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnSol1"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="Sol 1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnLa1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="La 1"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnSi1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Si 1"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDo0"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="Do 0"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnRe0"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Re 0"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnMi0"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="Mi 0"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnFa0"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Fa 0"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnSol0"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="Sol 0"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnLa0"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="La 0"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btnSi0"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:text="Si 0"
            android:textSize="10dp" />


    </LinearLayout>


    <ListView
        android:id="@+id/partition_List_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    </ListView>




</LinearLayout>